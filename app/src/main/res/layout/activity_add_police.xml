<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".AddPolice">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Police Station"
            android:textStyle="bold"
            android:fontFamily="@font/din_next_lt_arabic_medium"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:minHeight="50dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/hname"
            android:inputType="textPersonName"
            android:hint="Police station"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/haddress"
            android:background="@drawable/bg"
            android:minHeight="100dp"
            android:maxLines="10"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            android:focusable="false"
            android:inputType="textPostalAddress"
            android:hint="Enter Hospital Address"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hphone"
            android:background="@drawable/bg"
            android:minHeight="50dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            android:inputType="phone"
            android:hint="Enter station phone number"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hlat"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/bg"
            android:minHeight="50dp"
            android:layout_marginHorizontal="30dp"
            android:inputType="textPostalAddress"
            android:hint="Enter station latitude"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/hlon"
            android:focusable="false"
            android:textColor="@color/black"
            android:background="@drawable/bg"
            android:minHeight="50dp"
            android:layout_marginHorizontal="30dp"
            android:textColorHint="@color/black"
            android:inputType="textPostalAddress"
            android:hint="Enter station longitude"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/hpin"
            android:maxLength="4"
            android:background="@drawable/bg"
            android:minHeight="50dp"
            android:layout_marginHorizontal="30dp"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:hint="Enter Station Login pin number"/>
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:padding="10dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>